{
  "name": "mayhem-creations-backend",
  "version": "1.0.0",
  "description": "Backend API for Mayhem Creations e-commerce platform",
  "main": "dist/server.js",
  "scripts": {
    "start": "node --env-file=.env dist/server.js",
    "dev": "node --watch --env-file=.env -r ts-node/register src/server.ts",
    "build": "tsc",
    "test": "jest --env-file=.env",
    "test:watch": "jest --watch --env-file=.env",
    "test:coverage": "jest --coverage --env-file=.env",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "seed": "node --env-file=.env -r ts-node/register src/seeders/index.ts",
    "seed:force": "node --env-file=.env -r ts-node/register src/seeders/index.ts --force",
    "seed:clear": "node --env-file=.env -r ts-node/register src/seeders/index.ts --clear",
    "seed:reset": "node --env-file=.env -r ts-node/register src/seeders/index.ts --reset",
    "seed:roles": "node --env-file=.env -r ts-node/register src/seeders/index.ts --roles-only",
    "seed:users": "node --env-file=.env -r ts-node/register src/seeders/index.ts --users-only",
    "seed:clear-all": "node --env-file=.env -r ts-node/register src/seeders/index.ts --clear-all",
    "docs:generate": "node --env-file=.env -r ts-node/register -e \"import('./src/docs/swagger').then(s => console.log('API documentation generated successfully'))\"",
    "docs:serve": "echo 'Swagger UI available at http://localhost:5001/api-docs'",
    "docs:validate": "node --env-file=.env -r ts-node/register -e \"import('./src/docs/swagger').then(s => console.log('OpenAPI spec validation passed'))\"",
    "docs:export": "node --env-file=.env -r ts-node/register -e \"import('./src/docs/swagger').then(s => console.log('OpenAPI spec exported to /api-docs.json'))\""
  },
  "keywords": [
    "ecommerce",
    "api",
    "express",
    "typescript",
    "sequelize"
  ],
  "author": "Mayhem Creations",
  "license": "MIT",
  "dependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-brute": "^1.0.1",
    "express-mysql-session": "^3.0.1",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "google-auth-library": "^10.3.0",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "mysql2": "^3.6.5",
    "nodemailer": "^6.9.7",
    "sequelize": "^6.35.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/csurf": "^1.11.0",
    "@types/express": "^4.17.21",
    "@types/express-brute": "^1.0.0",
    "@types/express-mysql-session": "^3.0.6",
    "@types/express-session": "^1.17.10",
    "@types/jest": "^29.5.8",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.4",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^2.0.16",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "memorystore": "^1.6.7",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
